{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/pub.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-levent"
            ],
            "options": {
                "cwd": "/bin"
            }
        }
    ],
    "version": "2.0.0"
}